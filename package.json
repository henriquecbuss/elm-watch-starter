{
  "name": "elm-watch-starter",
  "version": "1.0.0",
  "description": "A template repository using Elm, elm-watch, and some goodies",
  "scripts": {
    "postinstall": "elm-tooling install",
    "build": "elm-watch make --optimize && tsc --noEmit -p ./tsconfig.build.json && npm run build:esbuild --tsconfig=./tsconfig.build.json",
    "build:esbuild": "esbuild src/index.ts --bundle --outdir=public/build --public-path=/build/",
    "dev": "run-pty run-pty.json",
    "generate": "npm run generate:ts-interop",
    "generate:ts-interop": "elm-ts-interop --output generated/Main.d.ts",
    "lint": "npm run lint:elm && npm run lint:ts",
    "lint:ts": "tsc --noEmit && eslint . && prettier --check .",
    "lint:elm": "elm-format --validate ./src ./tests && elm-review",
    "test": "npm run test:elm && npm run test:ts",
    "test:ts": "vitest run",
    "test:elm": "elm-test-rs"
  },
  "keywords": [],
  "author": "henriquecbuss",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "elm-review": "^2.7.6",
    "elm-spa": "^6.0.4",
    "elm-tooling": "^1.10.0",
    "elm-ts-interop": "^0.0.8",
    "elm-watch": "^1.0.2",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "run-pty": "^4.0.2",
    "serve": "^14.0.1",
    "uglify-js": "^3.17.4",
    "vitest": "^0.24.3"
  }
}
