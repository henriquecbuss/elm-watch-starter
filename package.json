{
  "name": "elm-watch-starter",
  "version": "1.0.0",
  "description": "A template repository using Elm, elm-watch, and some goodies",
  "scripts": {
    "postinstall": "elm-tooling install",
    "build": "npm run build:elm && npm run build:check-tsc && npm run build:esbuild --tsconfig=./tsconfig.build.json && npm run build:tailwind",
    "build:elm": "elm-watch make --optimize",
    "build:check-tsc": "tsc --noEmit -p ./tsconfig.build.json",
    "build:esbuild": "esbuild src/ts/index.ts --bundle --outdir=public/build --public-path=/build/",
    "build:tailwind": "tailwindcss -i ./src/css/index.css -o ./public/build/index.css",
    "dev": "run-pty run-pty.json",
    "generate": "npm run generate:elm-spa && npm run generate:ts-interop",
    "generate:ts-interop": "elm-ts-interop --output generated/Main.d.ts",
    "generate:elm-spa": "elm-spa generate",
    "lint": "npm run lint:elm && npm run lint:ts && npm run lint:css",
    "lint:elm": "elm-format --validate ./src ./tests && elm-review",
    "lint:ts": "tsc --noEmit && eslint . && prettier --check .",
    "lint:css": "npx stylelint src/**/*.css",
    "test": "npm run test:elm && npm run test:ts",
    "test:ts": "vitest run",
    "test:elm": "elm-test-rs"
  },
  "keywords": [],
  "author": "henriquecbuss",
  "license": "ISC",
  "devDependencies": {
    "@types/uglify-js": "^3.17.1",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "elm-review": "^2.7.6",
    "elm-spa": "^6.0.4",
    "elm-tooling": "^1.10.0",
    "elm-ts-interop": "^0.0.8",
    "elm-watch": "^1.0.2",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "live-server": "^1.2.2",
    "prettier": "^2.7.1",
    "run-pty": "^4.0.2",
    "stylelint": "^14.14.0",
    "stylelint-config-standard": "^29.0.0",
    "tailwindcss": "^3.2.1",
    "uglify-js": "^3.17.4",
    "vitest": "^0.24.3"
  }
}
